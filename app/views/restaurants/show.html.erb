<h3><%= @restaurant.name %></h3>

  <p><%= @restaurant.description %></p>
  <p><%= @restaurant.address %></p>

  <% if current_user %>

    <h4><%= link_to 'Book Reservation', new_restaurant_reservation_path(@restaurant)%></h4>

  	<% else %>

    <h4>Please <%=(link_to 'Log In', new_session_path) %> to make a reservation</h4>

  	<% end %>


  <h4><%= link_to "Back to Restaurants", restaurants_path %></h4>
