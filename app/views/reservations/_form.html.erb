<%= form_for ([@restaurant, @reservation]) do |f| %>

<div class="field">
  <%= f.label :date %>
  <%= f.date_select :date, :discard_year => true %>
</div><br>

<div class="field">
  <%= f.label :time %>
  <%= f.time_select :time, :ampm => true, :minute_step => 30, :start_hour => 12, :end_hour => 23 %>

</div><br>

<div class="actions">
  <%= f.submit %>
</div>


<% end %>
